
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container row">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">How can we help you ?</h1>
    </div>
    <div class="col-12 text-center" style="color:peru">
        Hello ! <br />
        Welcome to Helpdesk.<br />
        Helpdesk provides excellent tools to manage email communication with customers.
    </div>
</div>
<div class="p-2"></div>
<div class="border p-3">
    <div class="d-flex justify-content-between mb-10">
        <div class="p-2">
            <h2 class="text-primary">Ticket's List </h2>
        </div>
        <div class="p-2">
            <div class="card-footer">
                <div class="row">
                    <div class="col">
                        <a asp-action="Upsert" class="btn btn-success form-control ">Generate Ticket</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />
    <br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Subject</th>
                <th>Product Name</th>
                <th>Email</th>
                <th>Description</th>
                <th>CreatedDate</th>
                <th>Review</th>
                <th>Resolve</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/ticket1.js"></script>
}
